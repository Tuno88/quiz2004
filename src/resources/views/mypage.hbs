<div class="main-content">

    <div class="question-content">
        <form action="/mypage/score" method="POST" name="quiz">

            {{#each questions}}
            <div class="card" id="{{this._id}}">
                <h5 class="card-header">{{this.name}}</h5>
                <div class="card-body">
                    <h5 class="card-title">{{this.question}}</h5>
                    <div class="card-text">
                        <input type="hidden" name="questionid" value="{{this._id}}">
                        <input type="radio" name="{{this._id}}" value="1">{{this.option1}}<br>
                        <input type="radio" name="{{this._id}}" value="2">{{this.option2}}<br>
                        <input type="radio" name="{{this._id}}" value="3">{{this.option3}}<br>
                        <input type="radio" name="{{this._id}}" value="4">{{this.option4}}<br>
                    </div>
                </div>
            </div>
            {{/each}}
            <input type="submit" value="Submit form">
        </form>
    </div>
</div>